<div id="sidebar">
  <div id="sidebar-inner">
    <form
      id="search-form"
      action="https://www.google.com/search"
      method="get"
      class="search"
    >
      <input
        type="hidden"
        name="q"
        id="q"
        value="site:<%= config.environment.domain %>"
      />
      <label for="search-str">Search</label>
      <input type="text" name="q" id="search-str" />
      <button type="submit" class="submit">Search</button>
    </form>

    <% if (model.tags) { %>
    <div class="sidebar-image-sm">
      <ins
        class="adsbygoogle"
        style="display: block; width: 300px; height: 50px"
        data-ad-client="ca-pub-6747903070938911"
        data-ad-slot="3881182258"
      ></ins>
      <script>
        (adsbygoogle = window.adsbygoogle || []).push({});
      </script>
    </div>
    <% } %>

    <!-- tags -->
    <% if (model.archives['tags']) { %>
    <div class="tag-list-container">
      <h3>All Tags:</h3>
      <ul class="tag-list">
        <% model.archives['tags'].forEach(function(tagData) { %>
        <li>
          <a href="/<%= tagData.slug %>/"><%= tagData.name %></a>
        </li>
        <% }); %>
      </ul>
    </div>
    <% } %>
  </div>
</div>
