<!DOCTYPE html>
<html lang="en">
  <!-- head -->
  <%- include(config.folders.layouts.path + '/partials/head'); -%>
  <body>
    <!-- main -->
    <div class="grid-wrapper">
      <% if (model.tags || !model.guid || !model.slug || model.pagination) { %>
      <header id="header">
        <a
          href="https://mbsy.co/3lfRTn"
          target="_blank"
          rel="noopener noreferrer"
        >
          <picture>
            <source
              media="(max-width: 799px)"
              srcset="/images/dreamhost-banner-sm.jpg" />
            <source
              media="(min-width: 800px)"
              srcset="/images/dreamhost-banner-lg.png" />
            <img
              src="/images/dreamhost-banner-lg.png"
              alt="DreamHost" /></picture
        ></a>
      </header>
      <% } %>
      <main id="main">
        <article>
          <!-- image -->
          <% if (model.image) { %>
          <img
            height="350"
            width="927"
            class="post-image"
            alt="<%= model.imageAlt %>"
            src="/images/<%= model.image %>"
          />
          <% } %>
          <!-- content -->
          <% if (model.title && model.guid) { %>
          <div
            class="article-content-wrapper <%= model.image ? 'has-image' : '' %>"
          >
            <% } %>
            <!-- title -->
            <% if (model.title) { %>
            <h1 class="title"><%= model.title %></h1>
            <!--  -->
            <% } %>
            <!--  -->
            <% if (model.title && model.guid && model.tags) { %>
            <!-- meta -->
            <%- include(config.folders.layouts.path + "/partials/postMeta") %>
            <!--  -->
          </div>
          <div class="article-content-wrapper">
            <!--  -->
            <% } %>
            <!--  -->
            <% if (model.layout.startsWith("archives/")) { %>
            <!--  -->
            <%- include(config.folders.layouts.path + '/' + model.layout) %>
            <!--  -->
            <% } else { %>
            <!--  -->
            <%- model.content %>
            <!--  -->
            <% if (model.path.startsWith("posts/")) { %>

            <p class="edit-post-line">
              <a
                href="https://github.com/jdedwards3/devextent/blob/main/content/<%= model.path %>"
                >Edit this post on GitHub</a
              >.
            </p>
            <% } %>
            <!--  -->
            <% } %>
            <!-- end content -->
            <% if (model.title && model.guid) { %>
          </div>
          <% } %>
        </article>
      </main>
      <aside id="aside">
        <%- include(config.folders.layouts.path + '/partials/sidebar'); -%>
        <!--  -->
        <div class="aside-inner-container">
          <% if (model.tags || !model.guid || !model.slug || model.pagination) {
          %>
          <a
            class="aside-inner"
            href="https://mondaycom.grsm.io/3104-pm"
            target="_blank"
            rel="noopener noreferrer"
          >
            <img
              src="/images/monday-square.png"
              width="300"
              height="250"
              alt="monday.com"
          /></a>
          <% } %>
        </div>
      </aside>
      <footer id="footer">
        <%- include(config.folders.layouts.path + '/partials/footer'); -%>
      </footer>
    </div>
    <script
      type="module"
      src="/scripts/<%= config.version %>/script.js"
    ></script>
  </body>
</html>
